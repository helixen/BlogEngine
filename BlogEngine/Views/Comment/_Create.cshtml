@model Models.Comment

<div class="row">
    <div class="col-10 form-group">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <textarea rows="2" asp-for="Content" class="form-control form-control-sm" required maxlength="2000" ></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>  
            <div class="form-group">
                <input type="hidden"asp-for="PostId" value="@Model.PostId"/>
            </div>
            <div class="form-group">
                <button asp-controller="Comment" asp-action="Comment" type="submit" class="btn btn-primary btn-sm">Comment</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
