@model IEnumerable<Models.Post>

@{
    ViewData["Title"] = "GetSubmitted";
}

<h1>Submitted for Approval</h1>
@foreach (var item in Model)
{
    <div class="container mb-5 border-bottom border-primary">
        <div class="row my-2">
            <div class="col-2">

            </div>
            <div class="col-4">
                <input type="hidden" value="@item.Id" />
            </div>
            <div class="col-2">
                <span class="font-weight-bold small">Author:</span>
                <span class="small">@Html.DisplayFor(modelItem => item.AuthorName)</span>
            </div>
            <div class="col-4">
                <span class="font-weight-bold small">Submitted On:</span>
                <span class="small">@Html.DisplayFor(modelItem => item.SubmittedDate)</span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="justify-content-end">
                    @Html.DisplayFor(modelItem => item.Content)
                </p>
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                @Html.ActionLink("Approve", "Approve", "Home", new { id = item.Id }, new { @class = "btn btn-success mr-1" })
                @Html.ActionLink("Reject", "Reject", "Home", new { id = item.Id }, new { @class = "btn btn-warning mr-1" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger mr-1" })
            </div>
        </div>

    </div>
}

<div>
    <a asp-action="Index">Back to Public Posts</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}